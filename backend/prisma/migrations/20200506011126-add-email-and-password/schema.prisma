datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

enum AppointmentType {
    Examination
    Followup
}

enum Sex {
    Female
    Male
}

enum Specialty {
  Dentistry
}

enum PatientMembershipType {
  Primary
  Secondary
}

model User {
  id                 String  @id @default(uuid())
  name               String
  email              String
  password           String
  specialty          Specialty
}

model Patient {
  id                 String  @id @default(uuid())
  name               String
  phoneNo            String @unique
  type               PatientMembershipType
  appointments       Appointment[]
  age                Int
  sex                Sex
}

model Appointment {
  id                 String  @id @default(uuid())
  date               DateTime @unique @default(now())
  type               AppointmentType
  patient            Patient @relation(fields: [patientId], references: [id])
  patientId          String
  specialty          Specialty
  doctor             User @relation(fields: [doctorId], references: [id])
  doctorId           String 
  labs               String? @default("[]")
  complain           String? @default("")
  signs              String? @default("")
  diagnosis          String? @default("")
  treatment          String? @default("")
  recommendations    String? @default("")

  weight             Float?  @default(-1)
  height             Float?  @default(-1)
  pulse              Float?  @default(-1)
  temp               Float?  @default(-1)
  glucoseLevel       Float?  @default(-1)
  archived           Boolean @default(false)
}

