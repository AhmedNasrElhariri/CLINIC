<!doctype html >
<html>

<head>
  <title>Clinic-R Report</title>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
</head>
<style>
  table {
    border-collapse: collapse;
    width: 100%;
    margin: 0px 2px 50px 2px;
  }
  
  th, td {
    text-align: left;
    padding: 8px;
  }
  .heading{
    font-size: 15px;
    margin: 5px;
  }
  
  #accounting{
    text-align: center;
    margin: 5px 0px 10px 0x;
  }
  tr:nth-child(even) {background-color: #f2f2f2;}
  </style>

<body>
  <div class="test">
    <h2 id="accounting">Accounting Report</h2>
    <p class="heading">from <%= from %> to <%= to %></p>
    <p class="heading">Total = <%= total %></p>
    <hr/>
      <p class="heading">Transactions</p>
      <table>
        <tr>
          <th>Name</th><th>Amount</th><th>Date</th><th>Type</th>
        </tr>
    
        <% for (var i = 0; i < trans.length; /* I save the data in a variable 'quotation', I don't know how you named your variable  */  i++) { %>
        <tr>
          <td><%= trans[i].name %></td>
          <td><%= trans[i].amount %></td>
          <td><%= trans[i].date %></td>
          <td><%= trans[i].flag %></td>
        </tr>    
        <% } %>
    </table>
    <hr></hr>
   
  </div>
</body>

</html>