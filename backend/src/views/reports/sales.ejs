<!DOCTYPE html>
<html>
  <head>
    <title>Clinic-R Report</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  </head>
  <style>
    table {
      border-collapse: collapse;
      width: 100%;
      margin: 0px 2px 50px 2px;
    }

    th,
    td {
      text-align: left;
      padding: 8px;
    }
    .heading {
      font-size: 15px;
      margin: 5px;
    }

    #accounting {
      text-align: center;
      margin: 5px 0px 10px 0x;
    }
    tr:nth-child(even) {
      background-color: #f2f2f2;
    }
  </style>

  <body>
    <div class="test">
      <h2 id="accounting">Sales Report</h2>
      <p class="heading">from <%= from %> to <%= to %></p>
      <p class="heading">Total Sales Amount = <%= totalSalesPrice %></p>
      <p class="heading">Total Sales Cost = <%= totalCost %></p>
      <p class="heading">Profit = <%= totalSalesPrice - totalCost %></p>

      <hr />

      <table>
        <tr>
          <th>Seq</th>
          <th>Date</th>
          <th>Item</th>
          <th>Creator</th>
          <th>Quantity</th>
          <th>Total Price</th>
        </tr>

        <% for (var i = 0; i < sales.length; i++) { %>
        <tr>
          <td><%= i+1 %></td>
          <td><%= sales[i].date %></td>
          <td><%= sales[i]?.item?.name %></td>
          <td><%= sales[i]?.user?.name %></td>
          <td><%= sales[i].quantity %></td>
          <td><%= sales[i].totalPrice %></td>
        </tr>
        <% } %>
      </table>
    </div>
  </body>
</html>
